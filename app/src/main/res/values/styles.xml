<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonBarTitleStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainBtnStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/dimens_200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
    </style>

</resources>
